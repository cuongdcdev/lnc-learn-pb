{
  "manifest_version": 3,
  "name": "LNC Learn - Learn Effectively with AI",
  "version": "1.0.0",
  "description": "Turn web content into active knowledge with AI Quizzes, Feynman Explanations, and Critical Analysis. Learn effectively using 4 specialized methods: Translation, Quiz, Feynman, Devil's Advocate, powered by NEAR AI ",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open LNC Learn"
  },
  "web_accessible_resources": [
    {
      "resources": ["lnc-quiz-extension.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
